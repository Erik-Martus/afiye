<%- include('../partials/front-header') %>

<div id="desktop-register">
  <!-- <img class="login-bubble" src="../assets/blob-promo-index-kf.svg"> -->

  <div class="left">
    <img
      class="login-bubble"
      src="../assets/blob-promo-index-kf.svg"
      style="
        width: 809px;
        left: -134px;
        transform: rotate(133deg);
        opacity: 20%;
        top: 1%;
      "
    />

    <img src="../../assets/imgs/afiye-desktopIntro.svg" />
    <img class="login-bubble" src="../assets/blob-promo-index-kf.svg" style=" width: 1010px; left: -134px; transform: rotate(133deg); opacity: 20%; top: 1%;">

    <img src="../../assets/imgs/afiye-desktopIntro.svg">
  </div>

  <div class="right" style="margin: 0 auto; text-align: center; width: 400px">
    <div class="login-logo-section">
      <img
        class="login-logo"
        src="assets\imgs\afiye-icon.png"
        style="width: 80px"
      />
    </div>

    <h1 style="text-align: center; color: #000000; margin-bottom: 0rem">
      Sign Up
    </h1>
    <p style="margin-bottom: 4rem; color: #4e4b66">Create your account</p>

    <%- include ('../partials/messages') %>

    <form action="/register" method="post" style="width: 300px">
      <div class="input-container">
        <label for="name">First Name</label>
        <input
          style="height: 50px"
          class="input mobile"
          type="name"
          name="firstName"
          value="<%= typeof firstName != 'undefined' ? firstName : '' %>"
        />
      </div>
      <div class="input-container">
        <label for="name">Last Name</label>
        <input
          style="height: 50px"
          class="input mobile"
          type="name"
          name="lastName"
          value="<%= typeof lastName != 'undefined' ? lastName : '' %>"
        />
      </div>
      <div class="input-container">
        <label for="email">Email</label>
        <input
          style="height: 50px"
          class="input mobile"
          type="email"
          name="email"
          value="<%= typeof email != 'undefined' ? email : '' %>"
        />
      </div>
      <div class="input-container">
        <label for="password">Password</label>
        <input
          style="height: 50px"
          class="input mobile"
          type="password"
          name="password"
          value="<%= typeof password != 'undefined' ? password : '' %>"
        />
      </div>
      <div class="input-container">
        <label for="password2">Confirm Password</label>
        <input
          style="height: 50px"
          class="input mobile"
          type="password"
          name="password2"
          value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
        />
      </div>
      <button type="submit" class="button primary" style="width: 300px">
        Register
      </button>
    </form>

    <p style="padding-top: 3rem" class="center-header">
      Already have an account? <a href="/login">Sign in</a>
    </p>
  </div>

  <div class="bottom" style="height: 50px"></div>
</div>

