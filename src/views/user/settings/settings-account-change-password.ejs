<%- include('../../partials/user-header') %>

<%- include ('../../partials/messages') %>

<div class="header">
  <h1 class="header-title-mobile">Account Settings</h1>
</div>
<div style="text-align: left; margin: 20px 0 0 50px; height: 70px;">
  <p class="mobile-text-small" style="float:left;">
    You can change your password to a more secure one here
  </p>
</div>
<form id="change-pass" action="/account/settings-account-change-password" method="post">
  <input type="password" name="currentPassword" style="height: 55px; margin:10px auto 20px" placeholder="Old Password" required> </input>
  <input type="password" name="newPassword" style="height: 55px; margin:10px auto 20px" placeholder="New Password" required value="<%= typeof newPassword != 'undefined' ? newPassword : '' %>"> </input>
  <input type="password" name="newPassword2" style="height: 55px; margin:10px auto 20px" placeholder="Confirm New Password" required value="<%= typeof newPassword2 != 'undefined' ? newPassword2 : '' %>"> </input>
  <input type="submit" class="button primary" style="margin:80px auto 0;" value="Save"></input>
</form>

