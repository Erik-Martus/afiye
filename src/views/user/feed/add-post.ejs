<%- include('../../partials/user-header') %>
<main class='pageType-addPost' style="padding: 0; margin: 0 auto; width: 300px;">

  <form
    id="add-post"
    action="/account/add-post"
    method="post"
    enctype="multipart/form-data"
  >

  <div class="newalb">

    <h2>Create a New Memory</h2>
    <button id="open-tag" class="button primary icon tag"></button>
    </div>

    <div class="input-container">
      <label id="memory-title-tag" for="memory-title">Title</label>
      <input type="text" name="title" id="memory-title">
    </div>

<div class="input-container">    
    <input
      type="file"
      name="post-media-upload"
      id="post-media-upload"
      accept="image/jpeg, image/png"
      required
      class="input"
      multiple
    />
  </div>
    <div id="post-media-preview"></div>
    <div class="input-container">
      <label for="album-description">Description</label>
      <textarea
        name="description"
        id="album-description"
        cols="30"
        rows="10"
        required
      ></textarea>
    </div>
    <div id="tag-family" class="modal hidden">
      <div class="modal-inner">
        <h2>Tag Your Family</h2>
        <button class="button primary icon cross"></button>
        <input
          class="input"
          type="search"
          name="search_family"
          id="search_family"
          placeholder="Family member"
        />
        <div id="family-list"></div>
        </select>
      </div>
    </div>
    <input id="add-bottom-button" class="button primary" type="submit" value="Share" />
  </form>
</main>
